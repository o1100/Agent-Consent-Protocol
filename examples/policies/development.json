{
  "type": "policy",
  "version": "0.1.0",
  "id": "policy_development",
  "name": "Development Policy",
  "description": "Permissive policy for development and testing. Auto-approves most actions.",
  "rules": [
    {
      "id": "rule_block_critical_destructive",
      "name": "Still block truly destructive actions",
      "action_pattern": "delete_database",
      "decision": "never_allow",
      "priority": 300
    },
    {
      "id": "rule_auto_low_medium",
      "name": "Auto-approve low and medium risk",
      "match": {
        "risk_level": ["low", "medium"]
      },
      "decision": "auto_approve",
      "priority": 50
    },
    {
      "id": "rule_ask_once_high",
      "name": "Ask once per session for high risk",
      "match": {
        "risk_level": ["high"]
      },
      "decision": "ask_once_per_session",
      "priority": 100,
      "constraints": {
        "trust_duration_seconds": 7200
      }
    },
    {
      "id": "rule_ask_critical",
      "name": "Always ask for critical actions",
      "match": {
        "risk_level": ["critical"]
      },
      "decision": "always_ask",
      "priority": 200
    }
  ],
  "defaults": {
    "unmatched_action": "auto_approve",
    "timeout_seconds": 1800,
    "max_pending_requests": 50,
    "notification_channels": ["cli"]
  }
}
