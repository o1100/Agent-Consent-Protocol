{
  "type": "policy",
  "version": "0.1.0",
  "id": "policy_strict",
  "name": "Strict Policy",
  "description": "Paranoid mode â€” every action requires explicit approval. No auto-approvals.",
  "rules": [
    {
      "id": "rule_block_critical_financial",
      "name": "Block all financial critical actions",
      "match": {
        "risk_level": ["critical"],
        "category": ["financial"]
      },
      "decision": "never_allow",
      "priority": 100,
      "message": "Critical financial actions are blocked by policy"
    },
    {
      "id": "rule_block_dangerous_tools",
      "name": "Block known dangerous tools",
      "action_pattern": "delete_database",
      "decision": "never_allow",
      "priority": 90,
      "message": "This tool is blocked by policy"
    },
    {
      "id": "rule_block_shell_at_night",
      "name": "Block shell execution outside business hours",
      "match": {
        "category": ["system"]
      },
      "conditions": {
        "time_of_day": {
          "after": "22:00",
          "before": "07:00",
          "timezone": "UTC"
        }
      },
      "decision": "never_allow",
      "priority": 85,
      "message": "System actions blocked outside business hours"
    },
    {
      "id": "rule_rate_limit_comms",
      "name": "Rate limit communication actions",
      "match": {
        "category": ["communication"]
      },
      "decision": "always_ask",
      "priority": 70,
      "constraints": {
        "rate_limit": {
          "max_actions": 10,
          "window_seconds": 3600
        },
        "require_reason": true
      },
      "message": "Communication action requires approval (rate limited to 10/hour)"
    },
    {
      "id": "rule_rate_limit_financial",
      "name": "Rate limit and cap financial actions",
      "match": {
        "category": ["financial"]
      },
      "decision": "always_ask",
      "priority": 80,
      "constraints": {
        "max_amount": 1000,
        "currency": "USD",
        "daily_limit": 5000,
        "rate_limit": {
          "max_actions": 5,
          "window_seconds": 3600
        },
        "require_reason": true
      },
      "message": "Financial action requires approval (max $1000/action, $5000/day)"
    },
    {
      "id": "rule_block_public_patterns",
      "name": "Block posts containing sensitive keywords",
      "match": {
        "category": ["public"]
      },
      "decision": "always_ask",
      "priority": 60,
      "constraints": {
        "blocked_patterns": [
          "password",
          "secret",
          "api_key",
          "private",
          "confidential"
        ]
      },
      "message": "Public action requires approval (sensitive content check)"
    },
    {
      "id": "rule_always_ask_everything",
      "name": "Ask for everything else",
      "decision": "always_ask",
      "priority": 1,
      "message": "Strict mode: all actions require explicit approval"
    }
  ],
  "defaults": {
    "unmatched_action": "always_ask",
    "timeout_seconds": 600,
    "reminder_seconds": 120,
    "max_pending_requests": 5,
    "notification_channels": ["telegram"]
  }
}
